////[i:[gen:$ID], iii:[id:$ID], $rest];
////[i:[id:$ID], ii:[gen:$ID], $rest];
////[iii:[id:$ID], ii:[gen:$ID], $rest];
@trace
bindingClause → argumentClause {
  // print __FILE__ ; print " (" ; print __LINE__ ; println ")";
  // println ↑;
  [i:$I, ii:$II, iii:$III] ⊂ ↑;
  [gen:$genI] ⊂ $I;
  [gen:$genII] ⊂ $II;
  [gen:$genIII] ⊂ $III;
  attest ((¬ $genI) && (¬ $genII) && (¬ $genIII));
  ↓1 = ↑;
  ⇑ = ⇓1;
}

