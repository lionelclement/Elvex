@grammar

S → NP VP [det]  {
    [agent: $SUBJECT, $REST]; // Paul est l'agent
    ↓1 = $SUBJECT; //atribut hérité du NP
    ↓2 = $REST; //atribut hérité du VP
    ↓3 = ↑;
    ↓4 = ↑;      

}

NP → pn { // Paul   Marie
    ↓1 = ↑;
}

N → noun { // salad
    ↓1 = ↑;
}

VP → verb { 
    ↓1 = ↑;
}

NP → det noun { // a  salad
    ↓1 = ↑;
    ↓2 = ↑;
}
VP → verb NP { // made Marie
   [patient:$OBJET, $REST];
    ↓1 = $REST;
    ↓2 = $OBJET; 
    ⇑ = ⇓1;
 
}





