text → N verb features {
  [PRED:$pred, agent:$agent];
  ↓1 = $agent;
  ↓2 = [PRED:$pred, number:$number, person:$person];
  [number:$number, person:$person, hum:$hum, defined:$defined] ⊂ ⇓1;
  ↓3 = [number:$number, person:$person, hum:$hum, defined:$defined];
  ⇑ = ⇓2;
}

@trace
N → det noun {
  ↓2 = ↑;
  ↓1 = ⇓2;
  ⇑ = ⇓1 U ⇓2 U [person:_3];
}

N → pro {
  ↓1 = ↑;
  ⇑ = ⇓1;
}
